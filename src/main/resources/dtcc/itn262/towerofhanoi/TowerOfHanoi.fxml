<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

    <BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="dtcc.itn262.towerofhanoi.game_logic.TowerOfHanoiController">
        <center>
            <HBox alignment="CENTER" spacing="20">
                <VBox fx:id="tower1" onMouseClicked="#handleTower1Clicked"  alignment="BOTTOM_CENTER" prefWidth="150" prefHeight="300" style="-fx-border-color: black;" />
                <VBox fx:id="tower2" onMouseClicked="#handleTower2Clicked" alignment="BOTTOM_CENTER" prefWidth="150" prefHeight="300" style="-fx-border-color: black;" />
                <VBox fx:id="tower3" onMouseClicked="#handleTower3Clicked" alignment="BOTTOM_CENTER" prefWidth="150" prefHeight="300" style="-fx-border-color: black;" />
            </HBox>
        </center>
        <bottom>
            <TextArea fx:id="moveLog" editable="false" prefHeight="150" />
        </bottom>
    </BorderPane>

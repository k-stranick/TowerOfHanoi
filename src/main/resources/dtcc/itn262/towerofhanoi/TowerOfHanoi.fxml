<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="dtcc.itn262.towerofhanoi.game_logic.TowerOfHanoiController">
    <center>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <VBox alignment="CENTER">
                <VBox fx:id="tower1" onMouseClicked="#handleTower1Clicked" alignment="BOTTOM_CENTER" prefWidth="150"
                      prefHeight="300" style="-fx-border-color: black;"/>
                <Label text="Tower 1"/>
            </VBox>
            <VBox alignment="CENTER">
                <VBox fx:id="tower2" onMouseClicked="#handleTower2Clicked" alignment="BOTTOM_CENTER" prefWidth="150"
                      prefHeight="300" style="-fx-border-color: black;"/>
                <Label text="Tower 2"/>
            </VBox>
            <VBox alignment="CENTER">
                <VBox fx:id="tower3" onMouseClicked="#handleTower3Clicked" alignment="BOTTOM_CENTER" prefWidth="150"
                      prefHeight="300" style="-fx-border-color: black;"/>
                <Label text="Tower 3"/>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TextArea fx:id="moveLog" editable="false" prefHeight="150" wrapText="true"/>
            <HBox>
                <Button text="Restart Game" onAction="#resetHandler"/>
                <Button text="Main Menu" onAction="#goBackToMainScreen"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
